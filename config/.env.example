# ===== 配置项 =====
# 任务调度
CONFIG_TASK_CHECK_INTERVAL=10
CONFIG_RUN_JOBS_SERIALLY_SCHEDULE=3
CONFIG_SESSION_DURATION=1209600  # 14天，单位：秒

# 奖金池计算
CONFIG_BONUS_POOL_RATIO=0.002
CONFIG_BONUS_POOL_RATIO_BJ_2025_02=0.002

# 业绩金额上限
CONFIG_PERFORMANCE_AMOUNT_CAP=40000
CONFIG_ENABLE_PERFORMANCE_AMOUNT_CAP=false
