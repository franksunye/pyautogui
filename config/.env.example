# 环境变量示例文件
# 复制此文件为.env并填入实际值
# 注意：.env文件不应提交到版本控制系统

# 环境设置
ENVIRONMENT=production  # 可选值: development, production

# ===== 认证凭据 =====
# Metabase认证
METABASE_USERNAME=your_username@example.com
METABASE_PASSWORD=your_password

# 会话加密
SECURITY_SESSION_KEY=your_random_secret_key  # 用于加密会话信息，应为随机字符串

# ===== API端点 =====
# Metabase API
METABASE_URL=http://metabase.example.com:3000

# 技师状态检查
API_URL_TS=http://metabase.example.com:3000/api/card/719/query

# 工单联络超时提醒
API_URL_CONTACT_TIMEOUT=http://metabase.example.com:3000/api/card/980/query

# 上海活动API
API_URL_SH_2025_04=http://metabase.example.com:3000/api/card/1617/query
API_URL_SH_2025_05=http://metabase.example.com:3000/api/card/1694/query

# 北京活动API
API_URL_BJ_2025_04=http://metabase.example.com:3000/api/card/1616/query
API_URL_BJ_2025_05=http://metabase.example.com:3000/api/card/1693/query

# 每日服务报告
API_URL_DAILY_SERVICE_REPORT=http://metabase.example.com:3000/api/card/1514/query

# ===== Webhook URLs =====
# 企业微信Webhook
WECOM_WEBHOOK_DEFAULT=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your_key_here
WECOM_WEBHOOK_CONTACT_TIMEOUT=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your_key_here

# ===== 文件路径 =====
# 上海活动文件
FILE_TEMP_CONTRACT_DATA_SH_2025_04=state/ContractData-SH-Apr.csv
FILE_PERFORMANCE_DATA_SH_2025_04=state/PerformanceData-SH-Apr.csv
FILE_STATUS_SH_2025_04=state/send_status_sh_apr.json
FILE_TEMP_CONTRACT_DATA_SH_2025_05=state/ContractData-SH-May.csv
FILE_PERFORMANCE_DATA_SH_2025_05=state/PerformanceData-SH-May.csv
FILE_STATUS_SH_2025_05=state/send_status_sh_may.json

# 北京活动文件
FILE_TEMP_CONTRACT_DATA_BJ_2025_04=state/ContractData-BJ-Apr.csv
FILE_PERFORMANCE_DATA_BJ_2025_04=state/PerformanceData-BJ-Apr.csv
FILE_STATUS_BJ_2025_04=state/send_status_bj_apr.json
FILE_TEMP_CONTRACT_DATA_BJ_2025_05=state/ContractData-BJ-May.csv
FILE_PERFORMANCE_DATA_BJ_2025_05=state/PerformanceData-BJ-May.csv
FILE_STATUS_BJ_2025_05=state/send_status_bj_may.json

# 服务报告文件
FILE_TEMP_DAILY_SERVICE_REPORT=state/daily_service_report_record.csv
FILE_DAILY_SERVICE_REPORT_RECORD=state/daily_service_report_record.json
FILE_SLA_VIOLATIONS_RECORDS=./state/sla_violations.json

# 会话文件
FILE_SESSION=metabase_session.json

# ===== 联系人信息 =====
# 联系电话
CONTACT_PHONE_NUMBER=your_phone_number

# 上海活动联系人
CONTACT_WECOM_GROUP_NAME_SH_2025_04=（上海）运营群
